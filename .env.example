# Azure AI Foundry OpenAI Configuration
# Copy this file to .env and fill in your values

# Full OpenAI-compatible endpoint URL for your Azure AI Foundry resource
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/openai/v1/

# API key from Azure AI Foundry
AZURE_OPENAI_API_KEY=your-api-key-here

# Name of the deployed model (e.g. gpt-4o, gpt-5.2-chat)
AZURE_DEPLOYMENT_NAME=your-deployment-name

# Azure resource name (used by Vercel AI SDK to construct the endpoint URL)
AZURE_RESOURCE_NAME=your-resource-name

# Azure OpenAI API version
AZURE_API_VERSION=2025-04-01-preview
